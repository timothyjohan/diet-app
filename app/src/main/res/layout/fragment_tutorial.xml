<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.Tutorial">

    <ImageView

        android:id="@+id/ivSetting"
        android:layout_width="118dp"
        android:layout_height="182dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/screenshot_2024_06_21_040227"
        app:layout_constraintStart_toEndOf="@+id/ivRecap"
        app:layout_constraintTop_toBottomOf="@+id/tvPenjelasan4"
        app:srcCompat="@drawable/screenshot_2024_06_21_040332" />

    <TextView
        android:id="@+id/tvPenjelasan4"
        android:layout_width="151dp"
        android:layout_height="81dp"
        android:layout_marginTop="12dp"
        android:text="Setting difungsikan untuk mengatur konfigurasi. Dihalaman ini anda bisa mengatur preferensi pilihannya. Disini anda juga bisa logout atau menghapus akun anda."
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@+id/tvSetting"
        tools:layout_editor_absoluteX="241dp" />

    <TextView
        android:id="@+id/tvSetting"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="149dp"
        android:layout_marginTop="16dp"
        android:text="Settings"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tvRecap"
        app:layout_constraintTop_toBottomOf="@+id/ivLogFood" />

    <TextView
        android:id="@+id/tvTutorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="165dp"
        android:text="Tutorial"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCalculator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="90dp"
        android:text="TDEE Calculator"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPenjelasan1"
        android:layout_width="151dp"
        android:layout_height="81dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="12dp"
        android:text="TDEE Calculator diguakan untuk menghitung jumlah kalori yang user butuhkan setiap harinya. Disini Anda bisa memilih sebanyak apa aktivitas harian anda untuk mengetahui kalori yang anda gunakan setiap harinya"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCalculator" />

    <ImageView
        android:id="@+id/ivCalculator"
        android:layout_width="118dp"
        android:layout_height="182dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/screenshot_2024_06_21_040227"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPenjelasan1" />

    <ImageView
        android:id="@+id/ivRecap"
        android:layout_width="118dp"
        android:layout_height="182dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/screenshot_2024_06_21_040227"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPenjelasan3"
        app:srcCompat="@drawable/screenshot_2024_06_21_040318" />

    <TextView
        android:id="@+id/tvLogFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="83dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="96dp"
        android:text="Log Food"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvCalculator"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPenjelasan2"
        android:layout_width="151dp"
        android:layout_height="81dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="12dp"
        android:text="Pada Log Food anda bisa melihat list makanan yang ingin di konsumsi. Anda dapat memilih makanan tersebut dan menambahkannya ke List Food untuk merencanakan jumlah kalori yang anda konsumsi perharinya."
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/tvPenjelasan1"
        app:layout_constraintTop_toBottomOf="@+id/tvLogFood" />

    <ImageView
        android:id="@+id/ivLogFood"
        android:layout_width="118dp"
        android:layout_height="182dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/screenshot_2024_06_21_040227"
        app:layout_constraintStart_toEndOf="@+id/ivCalculator"
        app:layout_constraintTop_toBottomOf="@+id/tvPenjelasan2"
        app:srcCompat="@drawable/screenshot_2024_06_21_040300" />

    <TextView
        android:id="@+id/tvRecap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:text="Recap"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivCalculator" />

    <TextView
        android:id="@+id/tvPenjelasan3"
        android:layout_width="151dp"
        android:layout_height="81dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="12dp"
        android:text="Recap difungsikan untuk melihat kesuksesan diet setiap harinya. Jika anda berhasi mencapai target kalori anda maka tanggal akan bewarna hijau. Sebaliknya jika gagal maka warna akan menjadi merah."
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRecap" />

    <Button
        android:id="@+id/button"
        android:layout_width="86dp"
        android:layout_height="45dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="24dp"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>